Panels:
  - Class: rviz_common/Displays
    Name: Displays
  - Class: rviz_common/Selection
    Name: Selection
  - Class: rviz_common/Tool Properties
    Name: Tool Properties
  - Class: rviz_common/Views
    Name: Views
  - Class: nav2_rviz_plugins/Navigation 2
    Name: Navigation 2

Visualization Manager:
  Displays:
    # ========================================
    # ROBOT MODEL & TF
    # ========================================
    - Class: rviz_default_plugins/Grid
      Name: Grid
      Reference Frame: base_link
      Cell Size: 0.5
      Color: 160; 160; 160
      Enabled: true

    - Class: rviz_default_plugins/RobotModel
      Name: RobotModel
      Description Topic: /robot_description
      Visual Enabled: true
      Collision Enabled: false
      Enabled: true

    - Class: rviz_default_plugins/TF
      Name: TF
      Enabled: true
      Frame Timeout: 15.0
      Frames:
        All Enabled: false
        map:
          Value: true
        odom:
          Value: true
        base_footprint:
          Value: true
        base_link:
          Value: true
        camera_left_link:
          Value: true
        camera_right_link:
          Value: true
      Show Axes: true
      Show Names: true
      Marker Scale: 0.3

    # ========================================
    # CAMERA & PERCEPTION (Compressed only for bandwidth)
    # ========================================
    - Class: rviz_default_plugins/Image
      Name: Left Camera
      Topic: /stereo_camera/left/image_raw/compressed
      Enabled: true

    - Class: rviz_default_plugins/Image
      Name: Right Camera
      Topic: /stereo_camera/right/image_raw/compressed
      Enabled: true

    - Class: rviz_default_plugins/Image
      Name: Depth Image
      Topic: /stereo_camera/depth/image
      Transport: raw
      Normalize Range: true
      Enabled: false

    - Class: rviz_default_plugins/PointCloud2
      Name: Point Cloud
      Topic: /stereo_camera/points
      Size: 0.01
      Color Transformer: RGB8
      Decay Time: 0.0
      Enabled: true

    - Class: rviz_default_plugins/LaserScan
      Name: Laser Scan
      Topic: /scan
      Size: 0.05
      Color: 255; 0; 0
      Alpha: 1.0
      Enabled: true

    # ========================================
    # NAVIGATION: MAPPING & LOCALIZATION
    # ========================================
    - Class: rviz_default_plugins/Map
      Name: Map
      Topic: /map
      Color Scheme: map
      Alpha: 0.7
      Draw Behind: false
      Enabled: true

    - Class: nav2_rviz_plugins/ParticleCloud
      Name: Particle Cloud (AMCL)
      Topic: /particle_cloud
      Color: 0; 255; 0
      Alpha: 0.8
      Arrow Length: 0.1
      Enabled: true

    # ========================================
    # NAVIGATION: PLANNING & CONTROL
    # ========================================
    - Class: rviz_default_plugins/Path
      Name: Global Plan
      Topic: /plan
      Color: 255; 255; 0
      Line Width: 0.05
      Alpha: 1.0
      Enabled: true

    - Class: rviz_default_plugins/Path
      Name: Local Plan
      Topic: /local_plan
      Color: 0; 255; 0
      Line Width: 0.03
      Alpha: 1.0
      Enabled: true

    # ========================================
    # NAVIGATION: COSTMAPS & FOOTPRINTS
    # ========================================
    - Class: rviz_default_plugins/Polygon
      Name: Global Footprint
      Topic: /global_costmap/published_footprint
      Color: 255; 0; 255
      Alpha: 1.0
      Enabled: true

    - Class: rviz_default_plugins/Polygon
      Name: Local Footprint
      Topic: /local_costmap/published_footprint
      Color: 0; 255; 255
      Alpha: 1.0
      Enabled: true

    # ========================================
    # ODOMETRY & VELOCITY
    # ========================================
    - Class: rviz_default_plugins/Odometry
      Name: Odometry
      Topic: /odom
      Position Tolerance: 0.1
      Angle Tolerance: 0.1
      Keep: 100
      Enabled: true
      Covariance:
        Position Color: 255; 255; 127
        Position Alpha: 0.3
        Orientation Color: 255; 255; 127
        Orientation Alpha: 0.5

  # ========================================
  # GLOBAL OPTIONS
  # ========================================
  Global Options:
    Background Color: 48; 48; 48
    Fixed Frame: base_link
    Frame Rate: 30

  # ========================================
  # TOOLS
  # ========================================
  Tools:
    - Class: rviz_default_plugins/Interact
      Hide Inactive Objects: true
    - Class: rviz_default_plugins/MoveCamera
    - Class: rviz_default_plugins/Select
    - Class: rviz_default_plugins/FocusCamera
    - Class: rviz_default_plugins/Measure
      Line color: 128; 128; 0
    - Class: rviz_default_plugins/SetInitialPose
      Topic: /initialpose
      Covariance x: 0.25
      Covariance y: 0.25
      Covariance yaw: 0.068
    - Class: nav2_rviz_plugins/GoalTool
      Topic: /goal_pose
    - Class: rviz_default_plugins/PublishPoint
      Topic: /clicked_point

  # ========================================
  # VIEWS
  # ========================================
  Views:
    Current:
      Class: rviz_default_plugins/TopDownOrtho
      Name: TopDownOrtho
      Near Clip Distance: 0.01
      Scale: 20.0
      Target Frame: map
      X: 0.0
      Y: 0.0

